    <div class="column is-one-third">
        <div class="card">
            <header class="card-header">
                <p class="card-header-title">
                    Ministérios
                </p>
            </header>
            <div class="card-content">
                <div class="content">
                    <ul id="ministries-list">
                        <!-- filled by client JS -->
                    </ul>
                </div>
            </div>
            <footer class="card-footer">
                <a href="/ministerios" class="card-footer-item">Ver todos</a>
            </footer>
        </div>
    </div>

    <div class="column is-two-thirds">
        <div class="card">
            <header class="card-header">
                <p class="card-header-title">
                    Próximos Eventos
                </p>
            </header>
            <div class="card-content">
                <div class="content">
                    <table class="table is-fullwidth">
